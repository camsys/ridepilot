<tr class="trip">
  <td>
    <% if can? :edit, trip %>
      <%= link_to(format_time_for_listing(trip.pickup_time), edit_trip_path(trip), "data-remote"=>true, :title=>translate_helper("edit_trip_link_text")) %>
    <% else %>
      <%= format_time_for_listing trip.pickup_time %>
    <% end %>
  </td>
  <td>
    <%= link_to trip.customer.name, trip.customer, :title => translate_helper("view_customer_record_link_text") %>
  </td>
  <td>
    <%= trip.pickup_address.try :address %>
  </td>
  <td>
    <%= trip.dropoff_address.try :address %>
  </td>
  <td>
    <%= link_to_if trip.run.present?, trip.run_text, runs_path(:start => trip.run.try(:date).try(:to_time).to_i) %>
  </td>
  <td>
    <%= image_tag("tick-circle.png") if trip.customer_informed %>
  </td>
  <td>
    <%= display_trip_result(trip.trip_result) %>
  </td>
</tr>
