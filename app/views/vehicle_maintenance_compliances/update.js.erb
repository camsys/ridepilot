$('#modal-dialog').modal('hide');
var $new_row = $("<%= j (render @vehicle_maintenance_compliance) %>").hide();
$('#vehicle_maintenance_compliances-table .vehicle_maintenance_compliance-<%= @vehicle_maintenance_compliance.id %>').slideUp('fast').replaceWith($new_row);
$new_row.slideDown('slow');

<% if @is_newly_completed && @vehicle_maintenance_compliance.vehicle_maintenance_schedule %>
  <%= render 'create_next_event', vehicle: @vehicle, schedule_id: @vehicle_maintenance_compliance.vehicle_maintenance_schedule.id %>
<% end %>

