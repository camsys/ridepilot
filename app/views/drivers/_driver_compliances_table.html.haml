- table_id = legal ? 'legal_driver_compliances_table' : 'driver_compliances_table'
%table.table.table-striped.table-condensed{id: table_id}
  %thead
    %tr
      %th.col-sm-3= translate_helper("driver_compliance_form_due_date")
      %th= translate_helper("driver_compliance_form_event")
      %th.col-sm-3= translate_helper("driver_compliance_form_compliance_date")
      - unless @readonly
        %th.col-sm-1
  %tbody
    - if @readonly and driver_compliances.empty?
      %tr
        %td{:colspan => "3"}= translate_helper("driver_compliances_empty")
    = render partial: 'driver_compliances/driver_compliance', collection: driver_compliances
  