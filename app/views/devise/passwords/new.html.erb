<h2><%= translate_helper("new_password_heading")%></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, translate_helper("email") %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit translate_helper("submit_new_password_form") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
