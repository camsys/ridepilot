<h2><%=translate_helper("new_session_heading")%></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :username, translate_helper("username") %><br />
    <%= f.text_field :username, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, translate_helper("password") %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit translate_helper("new_session_submit") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<script type="text/javascript">
  $(function() {
    // clean up local storage for calendar view hidden status
    localStorage.removeItem('trip_calendar_hidden');
    localStorage.removeItem('run_calendar_hidden');
    localStorage.removeItem('trip_run_calendar_hidden');
  });
</script>