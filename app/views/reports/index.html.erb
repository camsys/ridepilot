<%= form_for @trips_query, :url=>url_for(:action=>:cctc_summary_report), :html=>{:method=>:get} do |f| %>
  <fieldset>
    <%= f.date_select :start_date, :order => [:month,:year] %>
    <%= f.submit "Show" %>
  </fieldset>
<% end %>

