<%= form_for @driver_query, :url=>url_for(:action=>:driver_manifest), :html=>{:method=>:get} do |f| %>
  <fieldset>
    <%= f.date_select  :start_date rescue nil%>
    <%= f.collection_select :driver_id, @drivers, :id, :user_name %>
    <%= f.submit translate_helper("show") %>
  </fieldset>
<% end %>