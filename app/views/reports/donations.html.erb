<div id="page-header">
  <h1><%= translate_helper("donation_report_heading") %></h1>
</div>

<%= form_for @query, :url=>url_for(:action=>:donations), :html=>{:method=>:get} do |f| %>
  <fieldset>
    <p>
      <%= f.date_select  :start_date, :discard_day=>true %>
      <%= f.submit translate_helper("donation_report_submit") %>
    </p>
  </fieldset>
<% end %>

<table>
<tr>
<th><%= translate_helper("customer") %></th>
<th><%= translate_helper("total_donations") %></th>
</tr>

<% for customer in @customers %>
<tr>
<td><%= customer.name %></td>
<td><%= @donations_by_customer[customer] %></td>
</tr>

<% end %>

<tr>
<td><%= translate_helper("total") %></td>
<td><%= @total %></td>
</tr>
</table>
