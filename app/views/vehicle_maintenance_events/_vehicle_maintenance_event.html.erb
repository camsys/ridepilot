<tr class="vehicle_maintenance_event-<%= vehicle_maintenance_event.id %>">
  <td>
    <p class="form-control-static">
      <%= link_to_unless @readonly, vehicle_maintenance_event.service_date.try(:to_s, :long), polymorphic_path([vehicle_maintenance_event.vehicle, vehicle_maintenance_event], action: :edit), remote: true %>
    </p>
  </td>
  <td>
    <p class="form-control-static">
      <%= vehicle_maintenance_event.invoice_date.try(:to_s, :long) %>
    </p>
  </td>
  <td>
    <p class="form-control-static">
      <%= vehicle_maintenance_event.odometer %>
    </p>
  </td>
  <td>
    <p class="form-control-static">
      <%= vehicle_maintenance_event.vendor_name %>
    </p>
  </td>
  <td>
    <p class="form-control-static">
      <%= vehicle_maintenance_event.invoice_number %>
    </p>
  </td>
  <td>
    <p class="form-control-static">
      <%= number_to_currency vehicle_maintenance_event.invoice_amount %>
    </p>
  </td>
  <td>
    <p class="form-control-static">
      <%= vehicle_maintenance_event.reimbursable %>
    </p>
  </td>
  <td>
    <p class="form-control-static">
      <%= vehicle_maintenance_event.services_performed %>
    </p>
  </td>
  <% unless @readonly %>
    <td>
      <%= link_to "X", polymorphic_path([vehicle_maintenance_event.vehicle, vehicle_maintenance_event]), remote: true, method: :delete, data: { confirm: translate_helper("vehicle_maintenance_event_delete_confirm") }, class: "btn btn-danger btn-sm pull-right" %>
    </td>
  <% end %>
</tr>