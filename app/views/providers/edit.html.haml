#page-header.row
  .col-sm-12.col-md-6
    %h1= translate_helper("edit_provider_heading", provider: @provider.name)
  .col-sm-12.col-md-6
    - if can? :manage, @provider
      .pull-right
        %button#provider_form_submit.btn.action-button
          = translate_helper("update")
        = link_to translate_helper("cancel"), provider_path(@provider), class: "btn action-button"

= render 'form' 
