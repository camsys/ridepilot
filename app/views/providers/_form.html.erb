<%= form_for @provider, :html => { :multipart => true } do |f| %>

  <fieldset>
    <ol class="section first">
      <li>
        <%= f.label :name, translate_helper("provider_form_name") %>
        <%= f.text_field :name %>
      </li>

      <li>
        <%= f.label :logo, translate_helper("provider_form_logo") %>
        <%= f.file_field :logo %>
      </li>
      
      <li>
        <%= f.label :dispatch, translate_helper("provider_form_dispatch") %>
        <%= f.check_box :dispatch %>
      </li>
      
      <li>
        <%= f.label :scheduling, translate_helper("provider_form_scheduling") %>
        <%= f.check_box :scheduling %>
      </li>
      
      <li>
        <%= f.label :allow_trip_entry_from_runs_page, translate_helper("provider_form_trip_entry_from_runs") %>
        <%= f.check_box :allow_trip_entry_from_runs_page %>
      </li>
      
      <li>
        <%= f.label :fields_required_for_run_completion, translate_helper("provider_form_fields_required_for_run_completion") %>
        <%= f.select :fields_required_for_run_completion, Run::FIELDS_FOR_COMPLETION, { prompt: "Select Required Fields" }, { multiple: true, size: Run::FIELDS_FOR_COMPLETION.size } %>
      </li>
    </ol>

    <div class="actions">
      <%= f.submit translate_helper("provider_form_submit") %>
    </div>
  </fieldset>

<% end %>