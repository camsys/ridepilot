<%= render 'shared/highlight_active_tab_js', is_primary_nav: true, tab_class: 'vehicles' %>

<div id="page-header" class="row">
  <div class="col-sm-12 col-md-6">
    <h1><%= translate_helper("vehicle_show_heading") %></h1>
  </div>
  <div class="col-sm-12 col-md-6">
    <% if can? :manage, @vehicle %>
      <div class="pull-right">
        <%= link_to translate_helper("delete_vehicle_button"), @vehicle, method: :delete, data: { confirm: translate_helper("delete_vehicle_confirmation") }, class: "btn action-button" %>
        <%= link_to translate_helper("edit_vehicle_button"), edit_vehicle_path(@vehicle), class: "btn action-button" %>
      </div>
    <% end %>
  </div>
</div>

<%= render partial: "form" %>
