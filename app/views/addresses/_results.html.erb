<% if @addresses.present? %>
  <% for address in @addresses %>
    <tr>
      <td class="name">
        <%=  link_to_if can?(:edit, Address), address.name || '' , edit_address_path(address) %>
      </td>
      <td><%= address.building_name %></td>
      <td><%= address.address %></td>
      <td><%= address.city %></td>
      <td><%= address.state %></td>
      <td><%= address.phone_number %></td>
      <td><%= address.in_district? ? "In District" : "Out of District" %></td>
      <% if can? :edit, Address %>
      <td><%= link_to translate_helper("edit"), edit_address_path(address), :class=>'edit edit-address' %></td>
      <!-- <td><%#= link_to "Delete", address, :confirm => 'Are you sure?', :method => :delete, :class=>'delete' %></td> -->
      <% end %>
    </tr>
  <% end %>
<% else %>
  <tr><td>No results for &lsquo;<%= @term %>&rsquo;</td></tr>
<% end %>
